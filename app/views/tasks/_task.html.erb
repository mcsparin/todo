<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">
			<%=link_to edit_task_path(task) do %>
			Created <%= time_ago_in_words(task.created_at) %> ago
			<%end%>		
		<%=link_to "<i class='fa fa-times'></i>".html_safe, task_path(task),method: :delete, data:{confirm:"Are you sure you want to delete this task?"}, class: "pull-right close-icon"%>
		</h3>
	</div>
	<div class="panel-body">
		<%= task.content %>
	</div>
	
	<div class="panel-footer">
		<%if task.state == "doing"%>
		<div class="btn-group btn-group-justified">
			<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task,state:"to_do"), method: :put, class: "btn btn-block btn-md btn-danger" %>
			<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task,state: "done"), method: :put, class: "btn btn-block btn-md btn-success"  %>
			</div>
		<%elsif task.state == "done"%>
			<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task,state:"doing"), method: :put, class: "btn btn-block btn-md btn-danger"  %>
		<%else%>
			<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task,state:"doing"), method: :put, class: "btn btn-block btn-md btn-success"  %>
		<%end%>
	</div>
</div>

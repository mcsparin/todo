<tr>
	<td><%= task.content %></td>
	<td><%= task.state %></td>
	<td>
		<%if task.state== "doing"%>
			<%= link_to 'Mark As To Do', change_task_path(task,state:"to_do"), method: :put %>
			<br>
			<%= link_to 'Mark As Done', change_task_path(task,state: "done"), method: :put %>
		<%else%>
			<%= link_to 'Mark As Doing', change_task_path(task,state:"doing"), method: :put %>
		<%end%>
	</td>
	<td><%= link_to 'Show', task %></td>
	<td><%= link_to 'Edit', edit_task_path(task) %></td>
	<td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>